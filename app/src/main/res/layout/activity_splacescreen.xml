<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".SplacescreenActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="140dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/eye_scan"/>
    <custome_font.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b7b8ba"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Best way to find homes"/>
    <custome_font.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignIn"
        android:background="@drawable/signin_rect"
        android:textColor="#ffffff"
        android:text="Sign In"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:textSize="16dp"
        android:paddingBottom="12dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_gravity="center_horizontal"/>
    <custome_font.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/qr_rect"
        android:textColor="#2dbcff"
        android:text="Scan QR Code"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:textSize="16dp"
        android:paddingBottom="12dp"
        android:paddingLeft="65dp"
        android:paddingRight="65dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>